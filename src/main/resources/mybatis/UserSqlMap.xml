<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user" >

	<resultMap id="BaseResultMap" type="com.simple.model.User" >
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="user_name" property="userName" jdbcType="VARCHAR" />
		<result column="user_phone" property="userPhone" jdbcType="INTEGER" />
		<result column="user_tel" property="userTel" jdbcType="VARCHAR" />
		<result column="login_name" property="loginName" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		<result column="wechat_no" property="weChatNo" jdbcType="VARCHAR" />
		<result column="ID_card" property="IDCard" jdbcType="VARCHAR" />
		<result column="address" property="address" jdbcType="VARCHAR" />
		<result column="register_date" property="registerDate" jdbcType="DATE" />
		<result column="salt" property="salt" jdbcType="VARCHAR" />
	</resultMap>


	<select id="selectOne" parameterType="java.util.Map" resultMap="BaseResultMap">
		SELECT user_name, user_phone, user_tel, login_name, password, wechat_no, ID_card, address, register_date, salt
		FROM user
		WHERE 1=1
		<if test="userPhone != null and userPhone != ''"> AND user_phone = #{userPhone}</if>
	</select>

	<insert id="createRegister" parameterType="com.simple.model.User">
		INSERT INTO user (user_name,user_phone,user_tel,login_name,password,wechat_no,ID_card,address,register_date,salt) 
		VALUES (#{userName},#{userPhone},#{userTel},#{loginName},#{password},#{weChatNo},#{IDCard},#{address},#{registerDate},#{salt})
	</insert>	
	
	<update id="modify" parameterType="com.simple.model.User">
		UPDATE user SET 
			user_name = #{userName},
			user_tel = #{userTel},
			login_name = #{loginName},
			password = #{password},
			wechat_no = #{weChatNo},
			ID_card = #{IDCard},
			address = #{address}
		WHERE user_phone = #{userPhone}
	</update>
</mapper>