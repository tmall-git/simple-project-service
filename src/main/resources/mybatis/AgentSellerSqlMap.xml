	<sql id="user_Column_List" >
		id, agent_phone,seller_phone,charge_percent
	</sql>

	<select id="queryByAgent" parameterType="String" resultMap="BaseResultMap">
		SELECT 
		<include refid="user_Column_List"></include>
		FROM agent_seller where agent_phone = #{userPhone}
	</select>
	
	<select id="queryBySeller" parameterType="String" resultMap="BaseResultMap">
		SELECT 
		<include refid="user_Column_List"></include>
		FROM agent_seller where seller_phone = #{userPhone}
	</select>
	
	<select id="queryCountByAgent" parameterType="String" resultType="Integer">
		SELECT count(1) FROM agent_seller where agent_phone = #{userPhone}
	</select>

	<insert id="insert" parameterType="com.simple.model.AgentSeller">
		INSERT INTO agent_seller (agent_phone,seller_phone) VALUES (#{agentPhone},#{sellerPhone})
	</insert>	
	
	<delete id="delete" parameterType="com.simple.model.AgentSeller">
		delete from agent_seller where id = #{id} and agent_phone = #{agentPhone} and seller_phone = #{sellerPhone}
	</delete>
	
	<update id="updatePercent" parameterType="java.util.Map">
		update agent_seller set charge_percent = #{chargePercent} 
		where agent_phone = #{agentPhone} 
		<if test="sellerPhone != null and sellerPhone !=''" > and seller_phone = #{sellerPhone} </if>
	</update>
	
	<select id="getSellerJoinHeadList"  parameterType="String" resultType="com.simple.model.SellerJoinHeadVO">
		SELECT u.*, IFNULL(a.charge_percent,0) chargePst, IF(a.seller_phone = #{userPhone},1,0) isJoin
		FROM 
			(SELECT u.user_phone, u.wechat_no, u.category, (SELECT COUNT(1) FROM product WHERE owner = u.user_phone AND product.product_status = 2) countSelling
			   FROM user u) u
		LEFT JOIN
			agent_seller a 
		ON u.user_phone = a.agent_phone
		ORDER BY isJoin DESC
	</select>
	
	<select id="getSellerJoinProductList" parameterType="java.lang.String" resultType="com.simple.model.SellerJoinProductVO">
		#{sql}
	</select>
	
</mapper>